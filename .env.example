# Swiss Federal Court Data Generation - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# LLM API Keys (at least one required)
# =============================================================================

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI API Key (for Gemini)
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# =============================================================================
# Processing Configuration
# =============================================================================

# Maximum number of parallel workers for LLM calls
MAX_WORKERS=10

# Batch size for processing (number of rows per batch)
BATCH_SIZE=100

# Quality threshold for generated responses (0-10)
QUALITY_THRESHOLD=7.0

# =============================================================================
# Paths Configuration
# =============================================================================

# Input data directory (relative to project root)
INPUT_FOLDER=./data

# Output file for generated data
OUTPUT_FILE=./output/generated_data.jsonl

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Optional: LangSmith Tracing
# =============================================================================

# Enable LangSmith tracing (true/false)
# LANGCHAIN_TRACING_V2=true

# LangSmith API Key
# LANGCHAIN_API_KEY=your-langsmith-api-key

# LangSmith project name
# LANGCHAIN_PROJECT=swiss-court-data-gen
